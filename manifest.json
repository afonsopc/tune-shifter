{
  "manifest_version": 3,
  "name": "Tune Shifter",
  "version": "1.0.0",
  "author": "Afonso Coutinho",
  "description": "Adjust playback speed, volume, and add reverb effects to any audio or video on the current web page.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Tune Shifter - Click to adjust audio/video settings"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tune-shifter@extension",
      "strict_min_version": "109.0"
    }
  }
}
